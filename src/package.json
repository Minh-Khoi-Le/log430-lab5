{
  "name": "retail-system-ddd",
  "version": "1.0.0",
  "description": "Retail System with Domain Driven Design and Microservices Architecture",
  "scripts": {
    "start": "npm run start:all",
    "start:all": "concurrently \"npm run start:user\" \"npm run start:product\" \"npm run start:store\" \"npm run start:inventory\" \"npm run start:sales\" \"npm run start:refund\" \"npm run start:web\"",
    "start:user": "cd services/user-service && npm start",
    "start:product": "cd services/product-service && npm start",
    "start:store": "cd services/store-service && npm start",
    "start:inventory": "cd services/inventory-service && npm start",
    "start:sales": "cd services/sales-service && npm start",
    "start:refund": "cd services/refund-service && npm start",
    "start:web": "cd web-client && npm run dev",
    "build": "npm run build:all",
    "build:all": "npm run build:user && npm run build:product && npm run build:store && npm run build:inventory && npm run build:sales && npm run build:refund && npm run build:web",
    "build:user": "cd services/user-service && npm run build",
    "build:product": "cd services/product-service && npm run build",
    "build:store": "cd services/store-service && npm run build",
    "build:inventory": "cd services/inventory-service && npm run build",
    "build:sales": "cd services/sales-service && npm run build",
    "build:refund": "cd services/refund-service && npm run build",
    "build:web": "cd web-client && npm run build",
    "install:all": "npm install && npm run install:services",
    "install:services": "cd services/user-service && npm install && cd ../product-service && npm install && cd ../store-service && npm install && cd ../inventory-service && npm install && cd ../sales-service && npm install && cd ../refund-service && npm install",
    "db:generate": "cd shared/infrastructure/database && npx prisma generate",
    "db:migrate": "cd shared/infrastructure/database && npx prisma migrate dev",
    "db:studio": "cd shared/infrastructure/database && npx prisma studio",
    "db:seed": "cd shared/infrastructure/database && node seed.js",
    "test": "npm run test:all",
    "test:all": "npm run test:user && npm run test:product && npm run test:store && npm run test:inventory && npm run test:sales && npm run test:refund",
    "test:user": "cd services/user-service && npm test",
    "test:product": "cd services/product-service && npm test",
    "test:store": "cd services/store-service && npm test",
    "test:inventory": "cd services/inventory-service && npm test",
    "test:sales": "cd services/sales-service && npm test",
    "test:refund": "cd services/refund-service && npm test"
  },
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.21.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "redis": "^5.5.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
